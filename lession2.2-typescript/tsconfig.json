/**
 * @func TypeScript编译器配置文件
 * @desc JSON格式文件
 */

 {
    // 配置ts编译规则
    "compilerOptions": {
        // 编译出的代码采用的模块化规范类型，默认为commonjs
        "module": "commonjs",
        // 编译出的代码才用ES哪个版本
        "target": "ES5",
        // 是否需要输出sourcemap
        "sourceMap": true,
        // 编译时减少冗余代码，避免相同的辅助函数多次生成
        // 这会导致编译出的代码依赖 tslib 这个迷你库，需要安装它。但避免了代码冗余。
        "importHelpers": true
    },
    // 编译范围不包括的文件夹目录
    "exclude": [
        "node_modules"
    ]
 }
